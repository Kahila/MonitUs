<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head') %>
</head>

<body class="page-header-fixed sidemenu-closed-hidelogo page-content-white page-md header-dark dark-sidebar-color logo-dark dark-theme">
    <div class="page-wrapper">
        <%- include('../partials/topbar'); %>
            <!-- start page container -->
            <div class="page-container">
                <!-- start sidebar menu -->
                <%- include('../partials/sidebar1'); %>
                    <!-- end sidebar menu -->
                    <div class="page-content-wrapper">
                        <div class="page-content">
                            <div class="page-bar">
                                <div class="page-title-breadcrumb">
                                    <div class=" pull-left">
                                        <div class="page-title">New PDF Assessment</div>
                                    </div>
                                    <ol class="breadcrumb page-breadcrumb pull-right">
                                        <li><i class="fa fa-home"></i>&nbsp;<a class="parent-item" href="home">Home</a>&nbsp;<i class="fa fa-angle-right"></i>
                                        </li>
                                        <li class="active">Dashboard</li>
                                    </ol>
                                </div>
                            </div>
                            <!--  -->
                            <!-- submission start -->
                            <div class="row">
                                <div class="col-md-12 col-sm-12">
                                    <div class="card card-box">
                                        <div class="card-head">
                                            <header>Assessment Information</header>
                                        </div>
                                        <div class="card-body" id="bar-parent">
                                            <form class="form-horizontal" method="post" action="newAssessment/newAssessment" enctype="multipart/form-data">
                                                <div class="form-body">
                                                    <div class="form-group row">
                                                        <label class="control-label col-md-3">Heading
                                                            <span class="required"> * </span>
                                                        </label>
                                                        <div class="col-md-5">
                                                            <input type="text" name="heading" data-required="1" placeholder="Assessment heading" class="form-control input-height" required>
                                                                
                                                        </div>
                                                    </div>
                                                    <div class="form-group row">
                                                        <label class="control-label col-md-3">Subject
                                                            <span class="required"> * </span>
                                                        </label>
                                                        <div class="col-md-5">
                                                            <select type="text" name="subject" data-required="1" placeholder="enter first name" class="form-control input-height" required>
                                                                <option value=""></option>
                                                                <% 
                                                                for (var i = 0; i < teacher.length; i++){ %>
                                                                    <option value="<%= teacher[i] %>|<%= grade[i] %>"> <%= teacher[i]%> | Grade <%= grade[i]%> </option>
                                                                <% } %>  
                                                            </select>
                                                        </div>
                                                    </div>
                                                   
                                                    <div class="form-group row">
                                                        <label class="control-label col-md-3">Due Date
                                                            <span class="required"> * </span>
                                                        </label>
                                                        <div class="col-md-5">
                                                            <div class="input-append date">
                                                                <div id="dateIcon" class="input-group datePicker">
                                                                    <input class="formDatePicker form-control" type="date"
                                                                        placeholder="Select Date.." data-input name="date" min="<%= date %>" required>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="form-group row">
                                                        <label class="control-label col-md-3">Due Time
                                                            <span class="required"> * </span>
                                                        </label>
                                                        <div class="col-md-5">
                                                            <input type="time" name="time" class="form-control"
                                                                placeholder="" required>
                                                        </div>
                                                    </div>
                                                    <div class="form-group row">
                                                        <label class="control-label col-md-3">Weighting (%)
                                                            <span class="required"> * </span>
                                                        </label>
                                                        <div class="col-md-5">
                                                            <input type="number" name="weighting" data-required="1" placeholder="assessment weighting (%)" class="form-control input-height" min="1"  max="100" required>
                                                        </div>
                                                    </div>
                                                    <div class="form-group row">
                                                        <label class="control-label col-md-3">File (PDF)
                                                        </label>
                                                        <div class="col-md-5">
                                                            <input type="file" class="default" name="file" accept=".pdf" multiple=false required>
                                                        </div>
                                                    </div>
                                                    <div class="form-actions">
                                                        <div class="row">
                                                            <div class="offset-md-3 col-md-9">
                                                                <button type="submit" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect m-b-10 btn-primary ">
                                                                    Upload <i class="fa fa-paper-plane-o"></i>
                                                                </button>
                                                                <a href="../createAssessment"><button type="button" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect m-b-10 btn-danger ">
                                                                    cancel
                                                                </button></a>
                                                                
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!--  -->
                        </div>
                        <!-- end page container -->
                        <!-- start footer -->
                        <%- include('../partials/footer'); %>
                            <!-- end footer -->
                    </div>
                    <%- include('../partials/scripts'); %>

</body>

</html>